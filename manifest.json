{
  "manifest_version": 2,

  "name": "japanese-text-talk",
  "description": "select japanese text that you want to listen to",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": ["tts"]
}
